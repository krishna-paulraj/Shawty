datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Url {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  actualUrl      String
  shortUrl       String   @unique
  lastAccessedAt DateTime @default(now())
  createdAt      DateTime @default(now())
}
